<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/vnametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.1dp"
            android:layout_marginTop="10dp"
            android:text="111111"
            android:textColor="#222222"
            android:textSize="16sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/vjobtxt"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vnametxt"
            android:layout_marginLeft="17.1dp"
            android:layout_marginTop="4dp"
            android:text="222222"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vtimetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vjobtxt"
            android:layout_marginLeft="17.1dp"
            android:layout_marginTop="9dp"
            android:text="33333333"
            android:textColor="#757575"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="17dp"
            android:layout_marginTop="36.2dp"
            android:background="@mipmap/arrow_right_black" />

    </RelativeLayout>
</RelativeLayout>