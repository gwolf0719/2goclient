<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#c63725">

    </RelativeLayout>

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/arrow_left_white" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/backbtn"
        android:layout_toRightOf="@+id/backbtn"
        android:text="To Be Verified"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginBottom="1dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/vnametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.1dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#222222"
            android:textSize="16sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/vjobtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vnametxt"
            android:layout_marginLeft="17.1dp"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vtimetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vjobtxt"
            android:layout_marginLeft="17.1dp"
            android:layout_marginTop="9dp"
            android:text=""
            android:textColor="#757575"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/datalayout"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview"
        android:background="#ffffff">

        <TextView
            android:id="@+id/datatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:text="Data"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/updatatimetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datatxt"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="1dp"
            android:text=""
            android:textColor="#222222"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menulayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datalayout"
        android:background="#ffffff"
        android:layout_marginBottom="1dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="35dp"
                android:background="@mipmap/line_official_long" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="35dp"
                    android:layout_weight="5"
                    android:singleLine="true"
                    android:text="Pick-Up"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/startadresstxt"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="5"
                    android:singleLine="true"
                    android:textColor="#757575"
                    android:text="Drop-Up"

                    android:textSize="14sp" />
                <TextView
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:id="@+id/endadresstxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/whatlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/menulayout"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/whattxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:text="What Purpose?"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="18dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/whattxt"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/whatptxt"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/agreebtn"
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="4.5dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/button_blue_message">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Agree"
    android:textColor="#ffffff"
    android:textSize="16sp"

    android:layout_centerHorizontal="true"
    android:layout_marginTop="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/refusebtn"
            android:layout_marginTop="16dp"
            android:layout_weight="5"
            android:layout_marginLeft="4.5dp"
            android:layout_marginRight="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/button_driver_message">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="Refuse"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>