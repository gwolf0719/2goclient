<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/incarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:visibility="visible">

        <TextView
            android:id="@+id/titletxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="12dp"
            android:text="Your driver has arrived."
            android:textColor="#c63725"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/iccartxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titletxt"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="4dp"
            android:text="number"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/iccnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iccartxt"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="29dp"
            android:textColor="#000000"
            android:textSize="16sp"

            />



        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iccnametext"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/star_active" />

        <TextView
            android:id="@+id/iccratetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView22"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/imageView22"
            android:layout_toRightOf="@+id/imageView22"
            android:text="1234"
            android:textColor="#c63725"
            android:textSize="19sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/iccselectlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/iccchangedestinationbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@mipmap/button_driver_long">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Change Destination"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>