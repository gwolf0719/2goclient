<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FD6961" >
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:background="@mipmap/menu_bar_logo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fpwbackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="10dp"
        android:text="back"
        android:visibility="gone" />

    <EditText
        android:id="@+id/fpwphoneedittxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fpwmaileditText"
        android:layout_alignRight="@+id/fpwmaileditText"
        android:layout_below="@+id/fpwmaileditText"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number" />

    <Button
        android:id="@+id/fpwnextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fpwphoneedittxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="next" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="Forget PassWord"

        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/fpwmaileditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textEmailAddress" />

    </RelativeLayout>